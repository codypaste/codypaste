    "joi": "^17.4.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.21.17",
    "mongoose": "^5.11.16",
    "pg": "^8.5.1",
    "pino": "^6.11.0",
    "pino-multi-stream": "^5.2.0",
    "pino-pretty": "^4.5.0",
    "reflect-metadata": "^0.1.13",
